<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/freecalculator.giovann.wah.freecalc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen3"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:visibility="visible"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <FrameLayout
        android:id="@+id/screenContainer"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_margin="0dp"
        android:padding="0dp">
        <LinearLayout
            android:id="@+id/allTextContainer"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="0dp"
            android:padding="0dp">
            <HorizontalScrollView
                android:id="@+id/bigTextScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/bigText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right"/>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/smallTextScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <LinearLayout
                    android:id="@+id/smallText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right" />
            </HorizontalScrollView>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/buttonContainer"
        android:background="@color/screen3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/buttonsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/buttonPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/screen3"
                android:layout_weight="1"
                />
            <TableLayout
                android:id="@+id/middleButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <!--
                    <Button
                        android:id="@+id/clear"
                        style="@style/BasicButton"
                        android:text="@string/clear"/>
                    <Button
                        android:id="@+id/_7"
                        style="@style/NumberButton"
                        android:text="@string/seven"/>
                    <Button
                        android:id="@+id/_8"
                        style="@style/NumberButton"
                        android:text="@string/eight"/>
                    <Button
                        android:id="@+id/_9"
                        style="@style/NumberButton"
                        android:text="@string/nine"/>
                    <Button
                        android:id="@+id/divide"
                        style="@style/BasicButton"
                        android:text="@string/divide"/> -->
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <!--
                    <Button
                        android:id="@+id/back"
                        style="@style/BasicButton"
                        android:text="@string/back"/>
                    <Button
                        android:id="@+id/_4"
                        style="@style/NumberButton"
                        android:text="@string/four"/>
                    <Button
                        android:id="@+id/_5"
                        style="@style/NumberButton"
                        android:text="@string/five"/>
                    <Button
                        android:id="@+id/_6"
                        style="@style/NumberButton"
                        android:text="@string/six"/>
                    <Button
                        android:id="@+id/multiply"
                        style="@style/BasicButton"
                        android:text="@string/multiply"/> -->
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:id="@+id/lowerButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!--
                <Button
                    android:id="@+id/equals"
                    style="@style/BigButton"
                    android:text="@string/equals"/> -->
                <TableLayout
                    android:id="@+id/lowerButtonsTable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1">
                        <!--
                        <Button
                            android:id="@+id/_1"
                            style="@style/NumberButton"
                            android:text="@string/one"/>
                        <Button
