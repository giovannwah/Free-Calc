<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style> -->
 <!-- <style name="CoolCalcTheme" parent="Theme.AppCompat.Light.NoActionBar"> -->
    <declare-styleable name="CoolCalcTheme">
        <attr name="SlideButtonStyle" format="reference" />
        <attr name="BasicButtonStyle" format="reference" />
    </declare-styleable>

    <style name="CoolCalcTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="SlideButtonStyle">@style/SlideButton</item>
        <item name="BasicButtonStyle">@style/BasicButton</item>
    </style>
    <style name="BasicButton" parent="android:Widget.Button">
        <item name="android:textSize">44sp</item>
        <item name="android:layout_span">1</item>
        <item name="android:background">@color/buttons2</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="SlideButton" parent="android:Widget.Button">
        <item name="android:background">@color/buttons5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_span">1</item>

    </style>
    <style name="BigButton" parent="BasicButton">
        <item name="android:background">@color/buttons3</item>
        <item name="android:layout_weight">4</item>
    </style>
    <style name="NumberButton" parent="BasicButton">
        <item name="android:background">@color/buttons4</item>
    </style>
    <style name="BigText" parent="android:Widget.Holo.EditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">52sp</item>
        <item name="android:editable">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="SmallText" parent="BigText">
        <item name="android:textSize">22sp</item>
        <item name="android:editable">false</item>
        <item name="android:layout_weight">2</item>
    </style>
</resources>
